#!/usr/bin/env bash

export PATH="$HOME/bin:$HOME/.local/pixi/bin:$HOME/.local/bin:$PATH"

# export QT_SCALE_FACTOR=2

case "$(uname -n)" in
"framework")
    export XCURSOR_SIZE=24
    export HYPRCURSOR_SIZE=24
    export GDK_SCALE=2
    export HYPR_SCALE=2
    ;;
*)
    export XCURSOR_SIZE=12
    export HYPRCURSOR_SIZE=12
    export GDK_SCALE=1
    export HYPR_SCALE=1
    ;;
esac
